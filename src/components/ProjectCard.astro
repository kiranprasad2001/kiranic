---
import { ArrowRight, ArrowUpRight } from 'lucide-react';

interface Props {
    title: string;
    description: string;
    tags?: string[];
    link?: string;
    slug?: string;
    year?: string;
}

const { title, description, tags = [], link, slug, year } = Astro.props;

// determine href: slug takes precedence for internal routing, then link, then fallback
const href = slug ? `/work/${slug}` : (link || '#');
const isInternal = !!slug;
---

<a 
    href={href}
    class="group relative block p-6 bg-white dark:bg-slate-800 rounded-lg border border-slate-200 dark:border-slate-700 hover:border-blue-500 dark:hover:border-blue-400 transition-all shadow-sm hover:shadow-md h-full flex flex-col"
>
    <div class="flex justify-between items-start mb-4">
        <h3 class="text-lg font-bold text-slate-900 dark:text-white group-hover:text-blue-600 dark:group-hover:text-blue-400 transition-colors">
            {title}
        </h3>
        {isInternal ? (
             <ArrowRight className="h-5 w-5 text-slate-400 group-hover:text-blue-500 transition-colors transform group-hover:translate-x-1" />
        ) : (link && link !== '#') && (
            <ArrowUpRight className="h-5 w-5 text-slate-400 group-hover:text-blue-500 transition-colors" />
        )}
    </div>

    <p class="text-slate-600 dark:text-slate-300 mb-6 line-clamp-3 leading-relaxed">
        {description}
    </p>

    <div class="flex items-center justify-between mt-auto pt-4 border-t border-slate-100 dark:border-slate-700/50">
        <div class="flex flex-wrap gap-2">
            {tags.map((tag) => (
                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-slate-100 text-slate-700 dark:bg-slate-700 dark:text-slate-300">
                    {tag}
                </span>
            ))}
        </div>
        {year && (
            <span class="text-xs text-slate-400 dark:text-slate-500 font-mono whitespace-nowrap ml-4">
                {year}
            </span>
        )}
    </div>
</a>
