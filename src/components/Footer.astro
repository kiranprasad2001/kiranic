---
import { Github, Linkedin, Mail, Rss } from 'lucide-react';

const socialLinks = [
    { 
        name: 'GitHub', 
        href: 'https://github.com/kiranprasad2001', 
        icon: Github 
    },
    { 
        name: 'LinkedIn', 
        href: 'https://linkedin.com/in/kiranprasad2001', 
        icon: Linkedin 
    },
    { 
        name: 'Email', 
        href: 'mailto:kp@kiranic.com', 
        icon: Mail 
    },
    { 
        name: 'RSS Feed', 
        href: '/rss.xml', 
        icon: Rss 
    },
];

const currentYear = new Date().getFullYear();
---

<footer class="bg-slate-50 dark:bg-slate-900 border-t border-slate-200 dark:border-slate-800 mt-auto">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
        <div class="flex flex-col items-center justify-between gap-6 md:flex-row">
            <div class="flex flex-col items-center md:items-start gap-2">
                <span class="text-xl font-bold text-slate-900 dark:text-white">Kiran Prasad</span>
                <p class="text-sm text-slate-600 dark:text-slate-400">
                    Architecting Documents & Cloud Systems.
                </p>
            </div>

            <div class="flex items-center gap-6">
                {socialLinks.map(({ name, href, icon: Icon }) => (
                    <a 
                        href={href}
                        target="_blank"
                        rel="noopener noreferrer"
                        class="text-slate-500 hover:text-blue-600 dark:text-slate-400 dark:hover:text-blue-400 transition-colors"
                        aria-label={name}
                    >
                        <Icon className="h-5 w-5" />
                    </a>
                ))}
            </div>
        </div>
        
        <div class="mt-8 pt-8 border-t border-slate-200 dark:border-slate-800 text-center text-sm text-slate-500 dark:text-slate-500">
            <p>&copy; {currentYear} Kiran Prasad. All rights reserved.</p>
        </div>
    </div>
</footer>
