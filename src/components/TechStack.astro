---
import { Cloud, Server, Box, Terminal, Database, Code, GitBranch } from 'lucide-react';

const techStack = [
    { icon: Cloud, label: "AWS", color: "text-orange-500", bg: "bg-orange-50 dark:bg-orange-900/20" },
    { icon: GitBranch, label: "Jenkins", color: "text-red-500", bg: "bg-red-50 dark:bg-red-900/20" },
    { icon: Server, label: "Quadient", color: "text-green-500", bg: "bg-green-50 dark:bg-green-900/20" },
    { icon: Database, label: "SmartComms", color: "text-purple-500", bg: "bg-purple-50 dark:bg-purple-900/20" },
    { icon: Box, label: "Docker", color: "text-sky-500", bg: "bg-sky-50 dark:bg-sky-900/20" },
    { icon: Terminal, label: "Python", color: "text-yellow-500", bg: "bg-yellow-50 dark:bg-yellow-900/20" }
];
---

<div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-6 gap-8">
    {techStack.map(tech => (
        <div class="flex flex-col items-center gap-4 p-4 rounded-xl hover:bg-white dark:hover:bg-slate-800 transition-all hover:scale-105 group cursor-default">
            <div class={`p-3 rounded-full ${tech.bg} ${tech.color} group-hover:scale-110 transition-transform`}>
                <tech.icon class="h-8 w-8" />
            </div>
            <span class="font-medium text-slate-700 dark:text-slate-300">{tech.label}</span>
        </div>
    ))}
</div>
