---
interface Props {
  title: string;
}
const { title } = Astro.props;
---

<div class="mb-12">
  <h2
    class="text-2xl font-bold text-slate-900 dark:text-slate-100 mb-6 border-b border-slate-200 dark:border-slate-700 pb-2"
  >
    {title}
  </h2>
  <div class="grid gap-6 md:grid-cols-2">
    <slot />
  </div>
</div>