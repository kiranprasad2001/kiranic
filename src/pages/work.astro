---
import BaseLayout from '../layouts/BaseLayout.astro';
import Navbar from '../components/Navbar.astro';
import Footer from '../components/Footer.astro';
import ProjectCard from '../components/ProjectCard.astro';
import DocumentWorkflow from '../components/DocumentWorkflow';
import { experience } from '../data/experience';
import { FileText } from 'lucide-react';

const title = "Work";
---

<BaseLayout title={title}>
    <Navbar />
    
    <main class="flex-grow max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-16 w-full">
        <div class="mb-12">
            <div class="flex flex-col md:flex-row md:items-center justify-between gap-4 mb-4">
                <h1 class="text-3xl md:text-4xl font-bold text-slate-900 dark:text-white">Professional Experience</h1>
                <a 
                    href="/resume" 
                    class="inline-flex items-center gap-2 px-4 py-2 text-sm font-medium text-white bg-blue-600 rounded-md hover:bg-blue-700 transition-colors w-fit"
                >
                    <FileText size={18} />
                    View Resume
                </a>
            </div>
            <p class="text-slate-600 dark:text-slate-300 max-w-2xl">
                13+ years orchestrating legacy modernization and cloud migration initiatives.
            </p>
        </div>

        <DocumentWorkflow client:load />

        <div class="grid gap-6 md:grid-cols-2 lg:grid-cols-3">
            {experience.map(item => (
                <ProjectCard {...item} />
            ))}
        </div>
    </main>

    <Footer />
</BaseLayout>