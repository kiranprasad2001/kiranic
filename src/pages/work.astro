---
import BaseLayout from '../layouts/BaseLayout.astro';
import Navbar from '../components/Navbar.astro';
import Footer from '../components/Footer.astro';
import ProjectCard from '../components/ProjectCard.astro';
import DocumentWorkflow from '../components/DocumentWorkflow';

const title = "Work";

const experience = [
    {
        title: "Digital Transformation Lead / Product Consultant",
        description: "Leading digital migration initiatives for major Canadian banks and insurers. Transforming 500+ regulatory assets and 1000+ legacy components to modern cloud-ready architectures (SmartComms, Quadient Inspire). Architecting AI-based PII validation tools and automating QA with Python.",
        tags: ["TCS", "SmartComms", "Quadient", "Python", "Team Lead"],
        year: "Dec 2020 – Present"
    },
    {
        title: "Technical Lead",
        description: "Engineered critical message queue workflows achieving 20% performance improvement. Designed CI/CD pipelines with Jenkins/Git for agile delivery. Secured $1.5M in new strategic projects through infrastructure optimization.",
        tags: ["Cognizant", "DevOps", "Jenkins", "Performance Optimization"],
        year: "Jul 2016 – Dec 2020"
    },
    {
        title: "Senior Developer",
        description: "Led end-to-end development of 150+ critical insurance assets using Oracle Documaker. Managed delivery for a 5-member squad and conducted technical workshops to upskill new recruits.",
        tags: ["Accenture", "Oracle Documaker", "Insurance Domain"],
        year: "Jan 2013 – Jun 2016"
    }
];
---

<BaseLayout title={title}>
    <Navbar />
    
    <main class="flex-grow max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-16 w-full">
        <div class="mb-12">
            <h1 class="text-3xl md:text-4xl font-bold text-slate-900 dark:text-white mb-4">Professional Experience</h1>
            <p class="text-slate-600 dark:text-slate-300 max-w-2xl">
                13+ years orchestrating legacy modernization and cloud migration initiatives.
            </p>
        </div>

        <DocumentWorkflow client:load />

        <div class="grid gap-6 md:grid-cols-2 lg:grid-cols-3">
            {experience.map(item => (
                <ProjectCard {...item} />
            ))}
        </div>
    </main>

    <Footer />
</BaseLayout>
