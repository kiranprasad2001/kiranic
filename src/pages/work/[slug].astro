---
import BaseLayout from '../../layouts/BaseLayout.astro';
import Navbar from '../../components/Navbar.astro';
import Footer from '../../components/Footer.astro';
import { experience } from '../../data/experience';
import { ArrowLeft, Calendar, Tag, Layers } from 'lucide-react';

export async function getStaticPaths() {
  return experience.map(project => ({
    params: { slug: project.slug },
    props: { project },
  }));
}

const { project } = Astro.props;
---

<BaseLayout title={`${project.title} | Work`}>
    <Navbar />
    
    <main class="flex-grow min-h-screen bg-slate-50 dark:bg-slate-900">
        <!-- Header / Hero -->
        <section class="relative pt-32 pb-20 px-4 sm:px-6 lg:px-8 overflow-hidden">
            <div class="absolute inset-0 z-0">
                <div class="absolute top-[-10%] right-[-10%] w-[40%] h-[40%] bg-blue-100/30 dark:bg-blue-900/10 rounded-full blur-[100px]"></div>
            </div>

            <div class="relative z-10 max-w-4xl mx-auto">
                <a href="/work" class="inline-flex items-center gap-2 text-sm text-slate-500 hover:text-blue-600 dark:text-slate-400 dark:hover:text-blue-400 mb-8 transition-colors">
                    <ArrowLeft class="w-4 h-4" />
                    Back to Work
                </a>
                
                <h1 class="text-4xl md:text-5xl font-bold text-slate-900 dark:text-white mb-6 leading-tight">
                    {project.title}
                </h1>
                
                <div class="flex flex-wrap items-center gap-6 text-slate-600 dark:text-slate-400 mb-8">
                    <div class="flex items-center gap-2">
                        <Calendar class="w-4 h-4" />
                        <span class="text-sm font-medium">{project.year}</span>
                    </div>
                </div>

                <p class="text-xl text-slate-700 dark:text-slate-300 leading-relaxed border-l-4 border-blue-500 pl-6">
                    {project.description}
                </p>
            </div>
        </section>

        <!-- Details Content -->
        <section class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 pb-32">
            <div class="grid md:grid-cols-3 gap-12">
                
                {/* Main Content */}
                <div class="md:col-span-2 space-y-12">
                    <div>
                        <h2 class="text-2xl font-bold text-slate-900 dark:text-white mb-6 flex items-center gap-3">
                            <span class="w-8 h-1 bg-blue-500 rounded-full"></span>
                            Key Achievements
                        </h2>
                        <ul class="space-y-4">
                            {project.details.map((detail) => (
                                <li class="flex items-start gap-3 bg-white dark:bg-slate-800/50 p-4 rounded-xl border border-slate-100 dark:border-slate-800 shadow-sm">
                                    <div class="min-w-1.5 h-1.5 rounded-full bg-blue-500 mt-2.5"></div>
                                    <span class="text-slate-600 dark:text-slate-300 leading-relaxed">
                                        {detail}
                                    </span>
                                </li>
                            ))}
                        </ul>
                    </div>
                </div>

                {/* Sidebar */}
                <div class="space-y-8">
                    {/* Tech Stack */}
                    <div class="bg-white dark:bg-slate-800 rounded-2xl p-6 border border-slate-200 dark:border-slate-700 shadow-sm">
                        <div class="flex items-center gap-2 mb-4 text-slate-900 dark:text-white font-bold">
                            <Layers class="w-5 h-5 text-blue-500" />
                            <h3>Tech Stack</h3>
                        </div>
                        <div class="flex flex-wrap gap-2">
                            {project.technologies.map(tech => (
                                <span class="px-3 py-1 bg-slate-100 dark:bg-slate-700 text-slate-700 dark:text-slate-200 text-xs font-medium rounded-full">
                                    {tech}
                                </span>
                            ))}
                        </div>
                    </div>

                    {/* Tags */}
                    <div>
                        <h3 class="text-sm font-bold text-slate-400 uppercase tracking-wider mb-4">Context</h3>
                        <div class="flex flex-wrap gap-2">
                             {project.tags.map(tag => (
                                <span class="inline-flex items-center gap-1.5 text-sm text-slate-600 dark:text-slate-400">
                                    <Tag class="w-3 h-3" />
                                    {tag}
                                </span>
                            ))}
                        </div>
                    </div>
                </div>

            </div>
        </section>

    </main>

    <Footer />
</BaseLayout>
