---
import BaseLayout from '../layouts/BaseLayout.astro';
import Navbar from '../components/Navbar.astro';
import Footer from '../components/Footer.astro';
import { Cloud, Server, Box, Terminal, Database, Code, GitBranch } from 'lucide-react';

const title = "Home";
---

<BaseLayout title={title}>
    <Navbar />
    
    <main class="flex-grow">
        <!-- Hero Section -->
        <section class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-20 md:py-32">
            <div class="max-w-3xl">
                <h1 class="text-4xl md:text-6xl font-bold tracking-tight text-slate-900 dark:text-white mb-6">
                    Digital Transformation <br class="hidden md:block"/>& Product Strategy.
                </h1>
                <p class="text-lg md:text-xl text-slate-600 dark:text-slate-300 leading-relaxed mb-8">
                    13+ years experience. Modernizing legacy infrastructure and orchestrating cloud migration initiatives. 
                    I bridge the gap between complex regulatory requirements and modern cloud architecture.
                </p>
                <div class="flex gap-4">
                    <a 
                        href="/work" 
                        class="inline-flex items-center justify-center px-6 py-3 border border-transparent text-base font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700 transition-colors"
                    >
                        View Work
                    </a>
                    <a 
                        href="/lab" 
                        class="inline-flex items-center justify-center px-6 py-3 border border-slate-300 dark:border-slate-700 text-base font-medium rounded-md text-slate-700 dark:text-slate-200 bg-white dark:bg-slate-800 hover:bg-slate-50 dark:hover:bg-slate-700 transition-colors"
                    >
                        Explore Lab
                    </a>
                </div>
            </div>
        </section>

        <!-- Tech Grid Section -->
        <section class="bg-slate-50 dark:bg-slate-800/50 py-20">
            <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
                <h2 class="text-2xl font-bold text-slate-900 dark:text-white mb-12">Technical Stack</h2>
                
                <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-6 gap-8">
                    {/* AWS */}
                    <div class="flex flex-col items-center gap-4 p-4 rounded-lg hover:bg-white dark:hover:bg-slate-800 transition-colors group">
                        <div class="p-3 rounded-full bg-orange-100 dark:bg-orange-900/30 text-orange-600 dark:text-orange-400 group-hover:scale-110 transition-transform">
                            <Cloud className="h-8 w-8" />
                        </div>
                        <span class="font-medium text-slate-700 dark:text-slate-300">AWS</span>
                    </div>

                    {/* Jenkins (replaced CDK) */}
                    <div class="flex flex-col items-center gap-4 p-4 rounded-lg hover:bg-white dark:hover:bg-slate-800 transition-colors group">
                        <div class="p-3 rounded-full bg-red-100 dark:bg-red-900/30 text-red-600 dark:text-red-400 group-hover:scale-110 transition-transform">
                            <GitBranch className="h-8 w-8" />
                        </div>
                        <span class="font-medium text-slate-700 dark:text-slate-300">Jenkins</span>
                    </div>

                    {/* Quadient */}
                    <div class="flex flex-col items-center gap-4 p-4 rounded-lg hover:bg-white dark:hover:bg-slate-800 transition-colors group">
                        <div class="p-3 rounded-full bg-green-100 dark:bg-green-900/30 text-green-600 dark:text-green-400 group-hover:scale-110 transition-transform">
                            <Server className="h-8 w-8" />
                        </div>
                        <span class="font-medium text-slate-700 dark:text-slate-300">Quadient</span>
                    </div>

                    {/* SmartComms */}
                    <div class="flex flex-col items-center gap-4 p-4 rounded-lg hover:bg-white dark:hover:bg-slate-800 transition-colors group">
                        <div class="p-3 rounded-full bg-purple-100 dark:bg-purple-900/30 text-purple-600 dark:text-purple-400 group-hover:scale-110 transition-transform">
                            <Database className="h-8 w-8" />
                        </div>
                        <span class="font-medium text-slate-700 dark:text-slate-300">SmartComms</span>
                    </div>

                    {/* Docker */}
                    <div class="flex flex-col items-center gap-4 p-4 rounded-lg hover:bg-white dark:hover:bg-slate-800 transition-colors group">
                        <div class="p-3 rounded-full bg-sky-100 dark:bg-sky-900/30 text-sky-600 dark:text-sky-400 group-hover:scale-110 transition-transform">
                            <Box className="h-8 w-8" />
                        </div>
                        <span class="font-medium text-slate-700 dark:text-slate-300">Docker</span>
                    </div>

                    {/* Python */}
                    <div class="flex flex-col items-center gap-4 p-4 rounded-lg hover:bg-white dark:hover:bg-slate-800 transition-colors group">
                        <div class="p-3 rounded-full bg-yellow-100 dark:bg-yellow-900/30 text-yellow-600 dark:text-yellow-400 group-hover:scale-110 transition-transform">
                            <Terminal className="h-8 w-8" />
                        </div>
                        <span class="font-medium text-slate-700 dark:text-slate-300">Python</span>
                    </div>
                </div>
            </div>
        </section>
    </main>

    <Footer />
</BaseLayout>
