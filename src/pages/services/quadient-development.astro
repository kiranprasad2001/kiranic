---
import BaseLayout from '../../layouts/BaseLayout.astro';
import Navbar from '../../components/Navbar.astro';
import Footer from '../../components/Footer.astro';
import DocumentWorkflow from '../../components/DocumentWorkflow';
import { Check, Server, Cloud, Code, ArrowRight } from 'lucide-react';

const title = "Quadient Inspire Developer & Architect | CCM Migration Expert";
const description = "Specializing in Quadient Inspire migration, performance optimization, and cloud deployment. Transform your legacy CCM infrastructure.";
const keywords = "Quadient Inspire, CCM Migration, Quadient Scaler, Inspire Designer, Interactive, Customer Communication Management";
---

<BaseLayout title={title} description={description} keywords={keywords}>
    <Navbar />
    
    <main class="flex-grow">
        {/* HERO */}
        <section class="pt-32 pb-20 bg-slate-900 text-white relative overflow-hidden">
             <div class="absolute inset-0 bg-blue-600/10 mix-blend-overlay"></div>
             <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 relative z-10">
                <div class="grid lg:grid-cols-2 gap-12 items-center">
                    <div>
                        <div class="inline-block px-4 py-1.5 mb-6 rounded-full bg-blue-900/50 border border-blue-700">
                             <span class="text-sm font-semibold text-blue-300 tracking-wide uppercase">Enterprise CCM Solutions</span>
                        </div>
                        <h1 class="text-4xl md:text-6xl font-bold mb-6 leading-tight">
                            Mastering <span class="text-transparent bg-clip-text bg-gradient-to-r from-blue-400 to-emerald-400">Quadient Inspire</span> for Cloud Scale.
                        </h1>
                        <p class="text-xl text-slate-300 mb-8 max-w-lg">
                            Stop struggling with legacy on-prem layouts. I re-architect Quadient workflows for performance, maintainability, and cloud-native deployment.
                        </p>
                        <div class="flex gap-4">
                            <a href="#contact" class="px-8 py-4 rounded-full bg-white text-slate-900 font-bold hover:bg-blue-50 transition-colors">
                                Consult on Migration
                            </a>
                        </div>
                    </div>
                    {/* Visual: Abstract Representation of Document Logic */}
                    <div class="relative bg-slate-800 rounded-xl p-8 border border-slate-700 shadow-2xl">
                         <DocumentWorkflow client:load /> 
                         <p class="text-center text-sm text-slate-500 mt-4 font-mono">Interactive Workflow Visualization</p>
                    </div>
                </div>
             </div>
        </section>

        {/* SERVICES */}
        <section class="py-24 bg-white dark:bg-slate-900">
            <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
                <div class="text-center max-w-3xl mx-auto mb-16">
                    <h2 class="text-3xl font-bold text-slate-900 dark:text-white mb-4">Why Enterprise Teams Hire Me</h2>
                    <p class="text-lg text-slate-600 dark:text-slate-400">
                        Most Quadient implementations are stuck in 2015. I bring modern DevOps, CI/CD, and Cloud patterns to the CCM world.
                    </p>
                </div>

                <div class="grid md:grid-cols-3 gap-8">
                    {[
                        {
                            icon: Server,
                            title: "Legacy Migration",
                            desc: "Moving from print-first monoliths to omni-channel, API-driven communication services."
                        },
                        {
                            icon: Cloud,
                            title: "Cloud Deployment",
                            desc: "Architecting Quadient Scaler and Inspire on AWS/Azure using Docker and Kubernetes."
                        },
                        {
                            icon: Code,
                            title: "Automation & CI/CD",
                            desc: "Treating templates as code. Automated testing, version control, and deployment pipelines for Inspire."
                        }
                    ].map(service => (
                        <div class="p-8 rounded-2xl bg-slate-50 dark:bg-slate-800 hover:bg-white dark:hover:bg-slate-700 transition-all shadow-sm border border-slate-100 dark:border-slate-700">
                            <service.icon class="w-12 h-12 text-blue-600 mb-6" />
                            <h3 class="text-xl font-bold text-slate-900 dark:text-white mb-3">{service.title}</h3>
                            <p class="text-slate-600 dark:text-slate-400">{service.desc}</p>
                        </div>
                    ))}
                </div>
            </div>
        </section>

        {/* CALL TO ACTION */}
        <section class="py-20 bg-slate-50 dark:bg-slate-800/50">
            <div class="max-w-4xl mx-auto px-4 text-center">
                <h2 class="text-3xl font-bold mb-6 text-slate-900 dark:text-white">Need a sanity check on your architecture?</h2>
                <p class="text-xl text-slate-600 dark:text-slate-300 mb-8">
                    Let's review your WFDs and deployment strategy before you sign that next renewal.
                </p>
                <a href="mailto:hello@kiranic.com" class="inline-flex items-center gap-2 px-8 py-4 rounded-full bg-blue-600 text-white font-bold hover:bg-blue-700 transition-colors">
                    Schedule an Audit <ArrowRight class="w-5 h-5" />
                </a>
            </div>
        </section>
    </main>

    <Footer />
</BaseLayout>
