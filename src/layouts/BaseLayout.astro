---
interface Props {
	title: string;
    description?: string;
    keywords?: string;
}

const { title, description = "Architecting Documents & Cloud Systems.", keywords } = Astro.props;
---

<!doctype html>
<html lang="en" class="scroll-smooth">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content={description} />
        {keywords && <meta name="keywords" content={keywords} />}
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
        
        {/* Canonical URL */}
        <link rel="canonical" href={new URL(Astro.url.pathname, Astro.site)} />

		<title>{title} | Kiran Prasad</title>

        {/* JSON-LD Structured Data */}
        <script type="application/ld+json" set:html={JSON.stringify({
            "@context": "https://schema.org",
            "@type": "Person",
            "name": "Kiran Prasad",
            "url": "https://kiranic.pages.dev",
            "jobTitle": "Enterprise CCM Architect",
            "knowsAbout": ["Quadient Inspire", "SmartComms", "Digital Transformation", "Cloud Strategy", "AWS"],
            "sameAs": [
                "https://github.com/kiranprasad2001",
                "https://linkedin.com/in/kiranprasad" // TODO: Update with real link if available
            ]
        })} />

        {/* Fonts */}
        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
	</head>
	<body class="bg-slate-50 dark:bg-slate-900 text-slate-900 dark:text-slate-100 min-h-screen flex flex-col font-sans antialiased selection:bg-blue-500 selection:text-white">
		<slot />
	</body>
</html>
